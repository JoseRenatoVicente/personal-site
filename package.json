{
  "name": "sombra-next",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run clean && next build",
    "start": "next start",
    "export": "cross-env IS_EXPORT=true npm run clean && next build && next export",
    "clean": "node -e \"const fs = require('fs'); const path = require('path'); const nextDir = path.resolve('.next'); if (fs.existsSync(nextDir)) { try { fs.rmSync(nextDir, { recursive: true, force: true, maxRetries: 3, retryDelay: 500 }); console.log('.next folder removed successfully!'); } catch (e) { console.error('Error removing .next folder:', e.message); process.exit(0); } } else { console.log('No .next folder found.'); }\"",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint-fix": "npx eslint . --fix",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs && node ./scripts/hide-next-version.cjs",
    "analyze": "npx cross-env ANALYZE=true npm run clean && npm run build",
    "serve": "serve out"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tryghost/content-api": "^1.11.28",
    "cheerio": "^1.1.2",
    "critters": "^0.0.23",
    "cssnano": "^7.1.0",
    "dayjs": "^1.11.13",
    "disqus-react": "^1.1.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "lodash": "^4.17.21",
    "lodash.throttle": "^4.1.1",
    "next": "^15.4.2",
    "postcss": "^8.4.47",
    "postcss-preset-env": "^10.2.4",
    "probe-image-size": "^7.2.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-medium-image-zoom": "^5.3.0",
    "refractor": "^5.0.0",
    "rehype": "^13.0.2",
    "rehype-react": "^8.0.0",
    "rss": "^1.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript-eslint": "^8.35.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@next/bundle-analyzer": "^15.4.2",
    "@tailwindcss/typography": "^0.5.15",
    "@types/cheerio": "^0.22.35",
    "@types/lodash": "^4.17.19",
    "@types/node": "^24.0.15",
    "@types/probe-image-size": "^7.2.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19",
    "@types/rss": "^0.0.32",
    "@types/tryghost__content-api": "^1.3.17",
    "autoprefixer": "^10.4.20",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "cssnano-preset-advanced": "^7.0.7",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.4.2",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "next-sitemap": "^4.2.3",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.3"
  }
}
